{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "/",
    "outDir": "dist/",
    "mapRoot": "dist/",
    "lib": [
      "es6"
    ],
    "sourceMap": true,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "server/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
